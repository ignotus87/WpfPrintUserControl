            <TextBlock Text="{Binding Text3, FallbackValue='Third line of Item1'}" TextAlignment="Center"  />
        </StackPanel>

        <StackPanel HorizontalAlignment="Center" Grid.Row="2" Grid.Column="1" DataContext="{Binding LabelViewModels[3]}">
